<%- model_class = Opportunity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Logo:</strong></dt>
  <dd><img src="<%= @opportunity.image_url %>">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @opportunity.name %>&nbsp;</dd>
  <% if @opportunity.site_url %>
  <dt><strong><%= model_class.human_attribute_name(:site_url) %>:</strong></dt>
  <dd><%= link_to @opportunity.site_url, @opportunity.site_url %>&nbsp;</dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @opportunity.description %>&nbsp;</dd>
  <% if @opportunity.level_exp %>
  <dt><strong><%= model_class.human_attribute_name(:level_exp) %>:</strong></dt>
  <dd><%= @opportunity.level_exp %>&nbsp;</dd>
  <% end %>
  <% if @opportunity.level_age_min != 0 %>
  <dt><strong>Minimum Age:</strong></dt>
  <dd><%= @opportunity.level_age_min %>&nbsp;</dd>
  <% end %>
  <% if @opportunity.level_age_max != 0 %>
  <dt><strong>Maximum Age:</strong></dt>
  <dd><%= @opportunity.level_age_max %>&nbsp;</dd>
  <% end %>
  <% if @opportunity.cost %>
  <dt><strong><%= model_class.human_attribute_name(:cost) %>:</strong></dt>
  <dd><%= @opportunity.cost == "0" ? "Free" : @opportunity.cost %>&nbsp;</dd>
  <% end %>
  <% if @opportunity.address %>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @opportunity.address %>&nbsp;</dd>
  <% end %>
  <dt><strong>Into work scheme:</strong></dt>
  <dd><%= @opportunity.into_work ? "Yes": "No" %>&nbsp;</dd>
  <dt><strong>Girls only scheme:</strong></dt>
  <dd><%= @opportunity.girls_only ? "Yes": "No" %>&nbsp;</dd>
  <% if @opportunity.skills %>
  <dt><strong><%= model_class.human_attribute_name(:skills) %>:</strong></dt>
  <dd><%= @opportunity.skills %>&nbsp;</dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:audience) %>:</strong></dt>
  <dd><%= @opportunity.audience || "All" %>&nbsp;</dd>
  <% if @opportunity.employer_opp %>
  <dt><strong><%= model_class.human_attribute_name(:employer_opp) %>:</strong></dt>
  <dd><%= @opportunity.employer_opp %>&nbsp;</dd>
  <% end %>
  <% if @opportunity.lo_type %>
  <dt><strong>Opportunity type(s):</strong></dt>
  <dd><%= @opportunity.lo_type %>&nbsp;</dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              opportunities_path, :class => 'btn'  %>
  <% if can? :manage, @opportunity %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_opportunity_path(@opportunity), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                opportunity_path(@opportunity),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
